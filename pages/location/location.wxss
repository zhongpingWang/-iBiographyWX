/* pages/location/location.wxss */

.myContainer {
  text-align: center;
  display: block;
  flex-direction: column;
  box-sizing: border-box;
  background: -webkit-linear-gradient(#0a1a53, #c5c4dc);
}

.topNav {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 1.5rem;
  background: #f1f1f1;
  height: 2rem;
  line-height: 2rem;
}

.topNav .iconUser {
  margin-left: 0.3rem;
}

.topNav .rightIcon {
  font-size: 2rem;
}

.weatherDetail .city {
  display: flex;
  justify-content: space-between;
  font-size: 0.8rem;
  padding: 0.5rem;
}

.address {
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.address .area {
  color: #fff;
}

.address .floor {
  color: #877b89;
}

.city .updateDate {
  color: #fff;
  opacity: 0.7;
}

.temperature {
  padding-top: 5rem;
  padding-left: 0.5rem;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.temperature .number {
  font-family: "HelveticaThin";
  display: flex;
  flex-direction: row;
  font-size: 5rem;
  color: #fff;
  font-weight: normal;
  line-height: 2.3rem;
}

.temperature .fahrenheit {
  margin-top: -1rem;
  font-size: 3rem;
}

.temperature .condition {
  color: #fff;
  margin-left: 0.5rem;
}

.weatherDetail .power {
  display: flex;
  color: #fff;
  align-items: flex-start;
  font-size: 0.8rem;
  padding-left: 0.5rem;
  margin-top: 0.5rem;
}

.hourDetial {
  display: flex;
  align-items: flex-start;
  color: #fff;
  font-size: 0.8rem;
  padding-top: 4rem;
  flex-direction: column;
  padding-left: 0.5rem;
}

.hourDetial .title {
  font-size: 1rem;
}

.hourList {
  display: flex;
  white-space: nowrap;
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

.hourList .item {
  display: inline-block;
}

.hourWeather {
  display: flex;
  flex-direction: column;
  width: 3.5rem;
}

.hourWeather .icon {
  margin-top: 0.2rem;
  margin-bottom: 0.2rem;
}

.charBox {
  display: flex;
  width: 100%;
}

.lifeBox {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  flex-wrap: wrap;
  text-align: center;
}

.lifeBox .item {
  display: flex;
  width: 4.6rem;
  height: 4.6rem;
  background: red;  
  align-items: center;
  border: 1px #ccc solid;
  justify-content: center;
}
